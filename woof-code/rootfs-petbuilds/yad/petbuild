download() {
    [ -f yad-cfe6c7064f3daff80953a09a890537a8e68b8d11.tar.gz ] || curl --fail --location --retry 3 --max-time 60 -o yad-cfe6c7064f3daff80953a09a890537a8e68b8d11.tar.gz https://github.com/step-/yad/archive/cfe6c7064f3daff80953a09a890537a8e68b8d11.tar.gz
}

build() {
    tar -xzf yad-cfe6c7064f3daff80953a09a890537a8e68b8d11.tar.gz
    cd yad-cfe6c7064f3daff80953a09a890537a8e68b8d11
    meson --buildtype=release --prefix=/usr build
    ninja -C build install
}