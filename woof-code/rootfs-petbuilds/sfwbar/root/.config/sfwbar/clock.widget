layout {

  label {
    style = "time"
    interval = 1000
    action = "defaultcalendar"
    tooltip = Time("%a %b %d")+"\n\nPress to launch\ncalendar"
    css = "* { font: 10pt Sans; -GtkWidget-align: 0.5; -GtkWidget-hexpand: true; -GtkWidget-vexpand: true; padding-right: 4px; }"
    value = Time("%H:%M")
  }
}
