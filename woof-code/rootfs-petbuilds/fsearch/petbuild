download() {
    [ -f fsearch-0.2.2.tar.gz ] || curl --fail --retry 3 --max-time 60 -o fsearch-0.2.2.tar.gz https://codeload.github.com/cboxdoerfer/fsearch/tar.gz/refs/tags/0.2.2
}

build() {
    tar -xzf fsearch-0.2.2.tar.gz
    cd fsearch-0.2.2
    meson --buildtype=release --prefix=/usr build
    ninja -C build install
    sed -i 's/^Categories=.*/Categories=X-Filesystem-find;/' /usr/share/applications/io.github.cboxdoerfer.FSearch.desktop
}