download() {
    [ -f swaylock-1.8.0.tar.gz ] || curl --fail --location --retry 3 --max-time 60 -o swaylock-1.8.0.tar.gz https://github.com/swaywm/swaylock/releases/download/v1.8.0/swaylock-1.8.0.tar.gz
}

build() {
    tar -xzf swaylock-1.8.0.tar.gz
    cd swaylock-1.8.0
    patch -p1 < ../root.patch
    meson --buildtype=release --prefix=/usr -Dpam=disabled -Dgdk-pixbuf=enabled -Dzsh-completions=false -Dbash-completions=false -Dfish-completions=false build
    ninja -C build install
}
