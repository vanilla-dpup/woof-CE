download() {
    [ -f efilinux-5781d5505189169758cfa0de43ceef9049af822e.zip ] || curl --fail --location --retry 3 --max-time 60 -o efilinux-5781d5505189169758cfa0de43ceef9049af822e.zip https://github.com/puppylinux-woof-CE/efilinux/archive/5781d5505189169758cfa0de43ceef9049af822e.zip
}

build() {
    unzip efilinux-5781d5505189169758cfa0de43ceef9049af822e.zip
    cd efilinux-5781d5505189169758cfa0de43ceef9049af822e
    # fix for gnu-efi 3.0.18
    sed -i 's/-j .rel /&-j .rodata /' Makefile
    make
    install -D -m 644 efilinux.efi /usr/lib/efilinux/efilinux.efi
}