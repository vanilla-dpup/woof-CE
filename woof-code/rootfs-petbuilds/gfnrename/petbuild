download() {
    [ -f gfnrename-0.6.tar.gz ] || curl --fail --retry 3 --max-time 60 -o gfnrename-0.6.tar.gz https://distro.ibiblio.org/easyos/source/oe/dunfell/gfnrename-0.6.tar.gz
}

build() {
    tar -xzf gfnrename-0.6.tar.gz
    cd gfnrename-0.6
    patch -p1 < ../gtk3.patch
    patch -p1 < ../gcc14.patch
    ./autogen.sh --prefix=/usr
    make install
    mkdir -p /usr/share/doc
    mv /usr/doc/gfnrename /usr/share/doc/
    rmdir /usr/doc 2>/dev/null
    mkdir -p /usr/share/applications
    cat << EOF > /usr/share/applications/gfnrename.desktop
[Desktop Entry]
Name=gFnRename
Comment=Easily rename multiple files
Exec=gfnrename
Icon=rename
Terminal=false
Type=Application
Categories=X-FilesystemUtility
StartupNotify=true
Encoding=UTF-8
GenericName=gFnRename
EOF
}