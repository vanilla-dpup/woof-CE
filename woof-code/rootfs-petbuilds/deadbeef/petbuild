download() {
    [ -f deadbeef-1.8.8.tar.bz2 ] || curl --fail --location --retry 3 --max-time 60 -o deadbeef-1.8.8.tar.bz2 https://sourceforge.net/projects/deadbeef/files/travis/linux/1.8.8/deadbeef-1.8.8.tar.bz2/download
    [ -f ddb_output_pw-0b099d13ab0e89d9934aabdeb2872f0f66ea6960.tar.gz ] || curl --location --fail --retry 3 --max-time 60 -o ddb_output_pw-0b099d13ab0e89d9934aabdeb2872f0f66ea6960.tar.gz https://github.com/DeaDBeeF-Player/ddb_output_pw/archive/0b099d13ab0e89d9934aabdeb2872f0f66ea6960.tar.gz
    [ -f autogen-b8832d713253dfe899dbeea9df6c152f88d280d6.sh ] || curl --fail --retry 3 --max-time 60 -o autogen-b8832d713253dfe899dbeea9df6c152f88d280d6.sh https://raw.githubusercontent.com/DeaDBeeF-Player/deadbeef/b8832d713253dfe899dbeea9df6c152f88d280d6/autogen.sh
}

build() {
    tar -xjf deadbeef-1.8.8.tar.bz2
    cd deadbeef-1.8.8
    DISABLE_GTK="--disable-gtk2"
    DISABLE_OUTPUT=""
    if command -v pipewire > /dev/null; then
        cd external
        tar -xzf ../../ddb_output_pw-0b099d13ab0e89d9934aabdeb2872f0f66ea6960.tar.gz
        mv -f ddb_output_pw-0b099d13ab0e89d9934aabdeb2872f0f66ea6960 ddb_output_pw
        cd ..
        ln -s . deadbeef
        patch -p1 < ../pipewire.patch
        sh ../autogen-b8832d713253dfe899dbeea9df6c152f88d280d6.sh
        DISABLE_OUTPUT="--disable-pulse --disable-alsa"
    fi
    CFLAGS="$CFLAGS -Wno-incompatible-pointer-types -Wno-int-conversion" \
    ./configure --prefix=/usr \
                --disable-nullout \
                --disable-oss \
                --disable-vfs-curl \
                --disable-lfm \
                --disable-artwork \
                --disable-artwork-network \
                --disable-vtx \
                --disable-adplug \
                --disable-ffmpeg \
                --disable-gme \
                --disable-notify \
                --disable-shellexec \
                --disable-wildmidi \
                --disable-tta \
                --disable-mms \
                --disable-vfs-zip \
                --disable-converter \
                --disable-dumb \
                --disable-psf \
                --disable-shellexecui \
                --disable-sc68 \
                --disable-soundtouch \
                $DISABLE_GTK \
                $DISABLE_OUTPUT
    make
    rm -f deadbeef
    make install
}