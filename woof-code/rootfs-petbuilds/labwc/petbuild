download() {
    [ -f labwc-0.6.4.tar.gz ] || wget -t 3 -T 60 -O labwc-0.6.4.tar.gz https://github.com/labwc/labwc/archive/refs/tags/0.6.4.tar.gz
}

build() {
    tar -xzf labwc-0.6.4.tar.gz
    cd labwc-0.6.4
    meson --buildtype=release --prefix=/usr -Dxwayland=enabled build
    ninja -C build install
    cd ..

    $CC $CFLAGS altf1d.c $LDFLAGS -o /usr/bin/altf1d
    $CC $CFLAGS numlockt.c $LDFLAGS -o /usr/bin/numlockt
}
