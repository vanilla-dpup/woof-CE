download() {
    [ -f mdview-bfc04d27b4.tar.gz ] || curl --fail --insecure --retry 3 --max-time 60 -o mdview-bfc04d27b4.tar.gz https://chiselapp.com/user/jamesbond/repository/mdview3/tarball/bfc04d27b4/mdview-bfc04d27b4.tar.gz
}

build() {
    tar -xzf mdview-bfc04d27b4.tar.gz
    cd mdview-bfc04d27b4
    make
    install -D -m 755 mdview /usr/local/bin/mdview
    install -D -m 644 README.md /usr/local/share/doc/mdview/README.md
    install -m 644 LICENSE /usr/local/share/doc/mdview/LICENSE
}
