download() {
    [ -f swayidle-1.8.0.tar.gz ] || wget -t 3 -T 60 https://github.com/swaywm/swayidle/releases/download/1.8.0/swayidle-1.8.0.tar.gz
}

build() {
    tar -xzf swayidle-1.8.0.tar.gz
    cd swayidle-1.8.0
    meson --buildtype=release --prefix=/usr -Dlogind=disabled -Dzsh-completions=false -Dbash-completions=false -Dfish-completions=false build
    ninja -C build install
}
