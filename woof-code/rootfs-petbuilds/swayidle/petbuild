download() {
    [ -f swayidle-1.8.0.tar.gz ] || curl --fail --location --retry 3 --max-time 60 -o swayidle-1.8.0.tar.gz https://github.com/swaywm/swayidle/releases/download/1.8.0/swayidle-1.8.0.tar.gz
}

build() {
    tar -xzf swayidle-1.8.0.tar.gz
    cd swayidle-1.8.0
    meson --buildtype=release -Dlogind=disabled -Dzsh-completions=false -Dbash-completions=false -Dfish-completions=false build
    ninja -C build install
}
