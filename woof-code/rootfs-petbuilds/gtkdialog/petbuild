download() {
    [ -f gtkdialog-0.8.5c.tar.gz ] || wget -t 3 -T 60 -O gtkdialog-0.8.5c.tar.gz https://github.com/puppylinux-woof-CE/gtkdialog/archive/0.8.5c.tar.gz
}

build() {
    tar -xzf gtkdialog-0.8.5c.tar.gz
    cd gtkdialog-0.8.5c
    meson --buildtype=release --prefix=/usr --bindir=/usr/sbin -Dgtkver=3 -Dbash=true build
    ninja -C build install
    ln -s gtkdialog /usr/sbin/gtk2dialog
}
