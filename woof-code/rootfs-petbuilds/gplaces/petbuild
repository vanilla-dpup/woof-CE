download() {
    if [ ! -f gplaces-0.18.2.tar ]; then
        git clone https://github.com/dimkr/gplaces gplaces-0.18.2
        cd gplaces-0.18.2
        git checkout v0.18.2
        git submodule update --init --recursive
        cd ..
        rm -rf gplaces-0.18.2/.git* gplaces-0.18.2/bestline/.git*
        tar -c gplaces-0.18.2 --mtime=@0 --sort=name > gplaces-0.18.2.tar
        rm -rf gplaces-0.18.2
    fi
}

build() {
    tar -xf gplaces-0.18.2.tar
    cd gplaces-0.18.2
    make CC=gcc VERSION=0.18.2 PREFIX=/usr CONFDIR=/etc install
    sed -i 's/^Categories=.*/Categories=X-Internet-utility;/' /usr/share/applications/gplaces.desktop
}
