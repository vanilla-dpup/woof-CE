#!/bin/sh
# Patriot Jan 2009 for Puppy Linux 4.1.1 GPL
# Revision 0.0.2
# 20130429 shinobar: bysybox version for Precise Puppy Linux 5.5 and etc.

case $1 in
	start)
		acpid -l /dev/null
		;;

	restart)
		killall acpid
		acpid -l /dev/null
		;;

	stop)
		killall acpid
		;;

	*)
		echo "Usage: rc.acpi {start|stop|restart}"
		;;
esac

