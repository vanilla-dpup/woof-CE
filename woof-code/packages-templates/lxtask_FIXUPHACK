cat << EOF > pinstall.sh
echo '#!/bin/sh
exec lxtask "\$@"' > usr/local/bin/defaultprocessmanager
chmod 755 usr/local/bin/defaultprocessmanager

echo '[General]
show_other_tasks=1' | tee root/.config/lxtask.conf home/spot/.config/lxtask.conf
chroot . chown spot:spot home/spot/.config/lxtask.conf
EOF
