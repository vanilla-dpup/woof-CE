    },
    "custom/terminal": {
	 "format": "🖥️",
	 "tooltip-format": "Terminal",
	 "interval": "once",
	 "on-click": "x-terminal-emulator"
    },
    "custom/help": {
	 "format": "🛟",
	 "tooltip-format": "Help",
	 "interval": "once",
	 "on-click": "puppyhelp"
    },
    "custom/exit": {
	 "format": "🚪",
	 "tooltip-format": "Exit",
	 "interval": "once",
	 "on-click": "logout_gui"
    },
    "wlr/taskbar": {
         "format": "{icon} {title}",
         "icon-size": 16,
