mkdir -p root/.config/waybar

cat << EOF > root/.config/waybar/config.jsonc
// -*- mode: jsonc -*-
{
    "layer": "top",
    "position": "bottom",
    "height": 36,
    "spacing": 4,
    "modules-left": [
        "custom/launcher",
        "custom/files",
        "custom/browser",
        "custom/terminal",
        "custom/help",
        "custom/exit",
        "wlr/taskbar"
    ],
    "modules-right": [
        "wireplumber",
        "battery",
        "network",
        "custom/firewall_ng",
        "tray",
        "clock"
    ],
    "custom/launcher": {
	 "format": "🚀",
	 "tooltip-format": "Launcher",
	 "interval": "once",
	 "on-click": "wofi --show drun -p '' --allow-images "
    },
    "custom/files": {
