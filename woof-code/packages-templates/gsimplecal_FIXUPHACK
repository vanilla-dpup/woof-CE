mkdir -p etc/xdg/gsimplecal
cat << EOF > etc/xdg/gsimplecal/config
show_timezones = 1
close_on_unfocus = 1
clock_format = %A, %d %B %Y, %H:%M
clock_label =
clock_tz =
EOF

cat << EOF > pinstall.sh
echo '#!/bin/sh
exec gsimplecal "\$@"' > usr/local/bin/defaultcalendar
chmod 755 usr/local/bin/defaultcalendar
EOF
