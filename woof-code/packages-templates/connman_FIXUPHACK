case ${DISTRO_BINARY_COMPAT} in ubuntu|trisquel|debian|devuan|raspbian)
 cat << EOF > pinstall.sh
if [ -e etc/init.d/unscd ]; then
 mkdir -p etc/default
 echo 'DAEMON_OPTS="--nodnsproxy"' > etc/default/connman
fi
EOF
esac

sed -e 's/^# BackgroundScanning =.*/BackgroundScanning = false/' \
    -e 's/^# FallbackTimeservers =.*/FallbackTimeservers = pool.ntp.org/' \
    -e 's/^# EnableOnlineCheck =.*/EnableOnlineCheck = false/' \
    -e 's/^# AllowHostnameUpdates =.*/AllowHostnameUpdates = false/' \
    -i etc/connman/main.conf
